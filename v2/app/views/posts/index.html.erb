<% @posts.each do |post| %>
  <tr>
    <td><%= post.post_date %></td>
    <td><%= post.title %></td>
    <td><%= post.body %></td>
    <td><%= post.tags %></td>
    <td><%= link_to 'Show', post %></td
  </tr>
<% end %>
</table>

