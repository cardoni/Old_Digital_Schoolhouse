<div class="row-fluid">
  <div class="span12">
    <%= render 'shared/top_about' %>
    <div class="page-header">
      <h1><%= @post.title %><br /><small>(Location: <%= @post.location %>)</small></h1>
      <%= render 'post_edit_button' -%>
    </div>
    <div class="pull-left">
      <% this_url =  "http://www.schoolhouse.io/posts/" + @post.slug -%>
      <%= tweet_button(:url => this_url,  :text => @post.title,
            :count => "none", :via => "GlobalPlay") %>
    </div>
    <div class="span12">
      <ul class="unstyled center">
      <% @post.assets.each do |asset| %>  
          <li>
          <%= image_tag(asset.image.thumb('750x400#').url ) %>
            <p>
              <%= @post.body_html %>
            </p>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
