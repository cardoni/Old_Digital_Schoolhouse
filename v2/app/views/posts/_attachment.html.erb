<% if attachment.object.new_record? %>
  <div class="field">
    <%= attachment.file_field(:image) %>
    <%= attachment.hidden_field :user_id, value: current_user.id %>
  </div>
<% else %>
  <div class="attachment-field">
    <%= image_tag attachment.image.remote_url, id: "photo-thumb" %>
    <%= attachment.link_to_remove "remove", id: "photo-remove" %>
    <div id="div-clear"></div>
    <%= attachment.hidden_field :_destroy %>
  </div>
<% end %>