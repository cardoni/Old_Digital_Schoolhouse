<div class="row-fluid">
  <div class="span12">
    <div class="page-header">
      <h1>Sign In</h1>
    </div>
    <div class="span3 offset3">
      <%= form_tag "/sessions", class: "form-horizontal" do %>
      <fieldset>
        <div class="control-group">
          <%= label_tag :email, nil, class: "control-label" %>
            <div class="controls">
          <%= text_field_tag :email, nil, class: "input-xlarge", placeholder: "email@address.com" %>
          </div>
        </div>
        <div class="control-group">
          <%= label_tag :password, nil, class: "control-label" %>
          <div class="controls">
            <%= password_field_tag :password, nil, class: "input-xlarge", placeholder: "password" %>
          </div>
        </div>
        <div class="form-actions">
          <%= submit_tag "Sign In", class: "btn btn-large btn-success span3" %>
        </div>
      </fieldset>
      <% end %>
    </div>
  </div>
</div>