<div class="row-fluid">
  <div class="span12">
    <div class="page-header">
      <h1>Sign In</h1>
    </div>
    <div class="well span5 offset3 center">
      <%= form_tag "/sessions", class: "form-vertical" do %>
      <fieldset>
        <div class="control-group">
          <%= label_tag :email, nil, class: "control-label" %>
            <div class="controls">
          <%= email_field_tag :email, nil, class: "span3", placeholder: "email@address.com" %>
          </div>
        </div>
        <div class="control-group">
          <%= label_tag :password, nil, class: "control-label" %>
          <div class="controls">
            <%= password_field_tag :password, nil, class: "span3", placeholder: "password" %>
          </div>
        </div>
        <div class="form-actions">
          <%= submit_tag "Sign In", class: "btn btn-large btn-success span3" %>
        </div>
      </fieldset>
      <% end %>
      <div>
        <p>Interested in learning more or getting involved with <%= link_to "Digital Schoolhouse", root_url -%> yourself?<br /><%= mail_to "info@digitalschoolhouse.com", "Send us an email!", encode: "hex" -%></p>
      </div>
    </div>
  </div>
</div>