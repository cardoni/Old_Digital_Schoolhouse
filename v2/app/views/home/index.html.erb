<%= raw("<h1>Welcome back, #{current_user.name.camelize}</h1>") if signed_in? %>
<!-- The following code is temporary.  It will be removed once we get the Masonry jQuery script working and lookin' good.  **Greg -->

<script>
  $(function(){
    $('#container').masonry({
      // options
      itemSelector : '.item',
      columnWidth : 300
     });
  });
</script>

<div id="container", class="sixteen columns">
  <% if signed_in? %>
    <h1>Welcome back <%= current_user.name.camelize %></h1>
  <% end %>
  <p><%= notice %></p>
  <% @posts.each do |post| %>
    <div class="item">
      <h2><%= post.title %></h2>
      <p><%= post.body %></p>
      <div id="test-box"></div>
    </div>
  <% end %>
</div>