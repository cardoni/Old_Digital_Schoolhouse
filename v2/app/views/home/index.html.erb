<div class="row jumbotron">
  <div class="span8">
    <div class="flexslider-container">
    	<div class="flexslider">
        <ul class="slides">
        	<li>
        		<%= image_tag("/images/string.png") %>
        		<p class="flex-caption">Captions and cupcakes. Winning combination.</p>
        	</li>
        	<li>
        		<a href="#"><%= image_tag("/images/string.png") %></a>
        		<p class="flex-caption">This image is wrapped in a link!</p>
        	</li>
        	<li>
        		<%= image_tag("/images/string.png") %>
        	</li>
        	<li>
        		<%= image_tag("/images/string.png") %>
        	</li>
        </ul>
      </div>
    </div>
  </div>
  <div class="span4">
    <div class="well">
      <%= link_to raw("<i class=\"icon-folder-open icon-white\"></i> Github Me"), "http://github.com/jwo/compass-bootstrap2.0-rails", :class=>"btn btn-primary btn-large" %>
    </div>
    <div class="compassme">
      <p>What up this is a test</p>
    </div>
  </div>
</div>
<div class="row">
  <% @posts.each do |p| %>
  <div class="span4">
    <div class="well">
      <h4><%= link_to p.title, post_url(p) %></h4>
      <p><%= body_truncate = truncate(p.body, length: 240, seperator: ' ') %></p>
      <div class="post-feature-image"><%= p.assets.first.present? ? image_tag(p.assets.first.image.thumb('280x200').url, id: "photo-thumb", alt: "#{body_truncate}") : "No Featured Image" %></div>
    </div>
  </div>
  <% end %>
</div>

<script type="text/javascript">
	$(window).load(function() {
		$('.flexslider').flexslider({
		  animation: "slide",
		  controlsContainer: ".flexslider-container",
		  manualControls: "#flex-nav li",
	  });
	});
</script>


